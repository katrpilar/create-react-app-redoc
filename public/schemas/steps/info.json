{
  "title": "Tiles",
  "description": "Tiles type step",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "stepTitle": {
      "title": "Title",
      "description": {"$ref": "../../booking/snippets/_stepTitle.mdx"},
      "type": "string",
      "x-examples": [
        "Please select the shape of your glasses"
