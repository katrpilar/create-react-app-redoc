    "stepType": {
      "title": "Type",
      "description":{"$ref": "../../booking/snippets/_stepType.mdx"},
      "type": "string",
      "enum": ["info"]
    },
    "nextStep": {
      "title": "Next step",
      "description":  {"$ref": "../../booking/snippets/_nextStep.mdx"},
      "type": "integer",
      "x-examples": [1, 2, 3]
    },
    "content": {
      "title": "Content",
      "description": "This parameter is used to specify the step content.",
      "type": "string",
      "x-examples": "Some information you need to share."
